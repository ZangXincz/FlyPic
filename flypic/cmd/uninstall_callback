#!/bin/bash

# FlyPic 卸载后清理脚本
# 清理应用配置文件（包括密码、JWT密钥等）
# 不清理素材库中的 .flypic 数据（缩略图、数据库等）

echo "🧹 FlyPic 卸载清理..."

# 清理应用配置文件
if [ -n "$TRIM_PKGVAR" ]; then
    CONFIG_FILE="$TRIM_PKGVAR/config.json"
    
    if [ -f "$CONFIG_FILE" ]; then
        echo "清理配置文件: $CONFIG_FILE"
        rm -f "$CONFIG_FILE"
        echo "✅ 配置文件已清理"
    else
        echo "📝 未找到配置文件，跳过"
    fi
else
    echo "⚠️  未检测到飞牛环境变量"
fi

echo "✨ 卸载清理完成"
echo "💡 素材库中的 .flypic 数据已保留"

exit 0
